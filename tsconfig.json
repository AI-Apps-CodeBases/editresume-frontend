{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/Editor/*": [
        "./src/components/Editor/*"
      ],
      "@/components/editor/*": [
        "./src/components/Editor/*"
      ],
      "@/components/AI/*": [
        "./src/components/AI/*"
      ],
      "@/components/ai/*": [
        "./src/components/AI/*"
      ],
      "@/components/Shared/*": [
        "./src/components/Shared/*"
      ],
      "@/components/shared/*": [
        "./src/components/Shared/*"
      ],
      "@/components/Resume/*": [
        "./src/components/Resume/*"
      ],
      "@/components/resume/*": [
        "./src/components/Resume/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
