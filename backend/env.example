# Database Configuration (PostgreSQL required)
DATABASE_URL=postgresql+psycopg2://editresume:your_secure_password_here@localhost:5432/editresume_db

# Docker Compose PostgreSQL Settings
POSTGRES_USER=editresume
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=editresume_db

# Application Settings
PREMIUM_MODE=false
ENVIRONMENT=staging

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Firebase Admin (choose one of the credential inputs below)
FIREBASE_PROJECT_ID=editresume
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
# FIREBASE_SERVICE_ACCOUNT_BASE64=base64-encoded-service-account
# FIREBASE_SERVICE_ACCOUNT_KEY_PATH=/path/to/serviceAccountKey.json

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id
STRIPE_SUCCESS_URL=http://localhost:3000/profile?tab=billing
STRIPE_CANCEL_URL=http://localhost:3000/profile?tab=billing
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/profile?tab=billing

# Additional CORS Origins (comma-separated)
ADDITIONAL_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (for feedback notifications)
# Note: Render may block SMTP on port 587. Try port 465 with SSL instead.
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
SMTP_USE_SSL=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Uvicorn/Server Configuration
WEB_CONCURRENCY=2
UVICORN_WORKERS=2

